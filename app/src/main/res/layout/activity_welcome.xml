<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cn.burus.hcytestproject.WelcomeActivity">

    <LinearLayout
        android:id="@+id/ll_rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_welcome"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/sign_in_page_backgroup"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_glide_test"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_marginTop="100px"
                android:background="#20ff00ff"/>

            <ImageView
                android:id="@+id/img_glide_test2"
                android:layout_width="400px"
                android:layout_height="300px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="100px"
                android:layout_toRightOf="@+id/img_glide_test"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
